char *str_unescape(char *str)
{
        /* @UNSAFE */
            char *dest, *start = str;

                while (*str != '\\') {
                            if (*str == '\0')
                                        return start;
                                                str++;
                }

                    for (dest = str; *str != '\0'; str++) {
                                if (*str == '\\') {
                                                str++;
                                                            if (*str == '\0')
                                                                            break;
                                }

                                        *dest++ = *str;
                    }

                        *dest = '\0';
                            return start;
}

                                }
                    }
                }
